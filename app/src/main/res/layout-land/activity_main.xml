<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#7b008bfb"
    android:weightSum="1"
    android:gravity="center">

    <TableLayout
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:id="@+id/tabla1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/edNombre"
                android:hint="@string/Nombre"
                android:layout_span="2"
                android:textColor="#ff030303" />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:inputType="phone"
                android:id="@+id/edTelefono"
                android:hint="@string/Telefono"
                android:layout_span="2"
                android:textColor="#ff030303" />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:stretchColumns="2">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btInsertar"
                android:text="@string/Insertar"
                android:layout_weight="5"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_015" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="@string/Ver"
                android:id="@+id/btVer"
                android:layout_weight="5"
                android:drawableLeft="@drawable/abc_btn_radio_to_on_mtrl_015" />
        </TableRow>

         <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:stretchColumns="2">
             <EditText
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="5"
                 android:id="@+id/edBuscar"
                 android:hint="@string/buscar"/>
             <Button
                 android:layout_width="fill_parent"
                 android:layout_height="35dp"
                 android:text="@string/buscar"
                 android:layout_weight="5"
                 android:id="@+id/btnBuscar"
                 android:drawableLeft="@drawable/abc_ic_search_api_mtrl_alpha" />


        </TableRow>

        <TableRow android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:stretchColumns="2">
            <Button
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="@string/editar"
                android:layout_weight="5"
                android:id="@+id/btnEditar"
                android:drawableLeft="@drawable/abc_ic_menu_paste_mtrl_am_alpha" />
            <Button
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="@string/eliminar"
                android:layout_weight="5"
                android:id="@+id/btnEliminar"
                android:drawableLeft="@drawable/abc_ic_clear_mtrl_alpha" />

        </TableRow>

    </TableLayout>

</LinearLayout>